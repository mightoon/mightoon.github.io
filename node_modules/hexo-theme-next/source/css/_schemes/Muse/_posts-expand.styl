// Post Expand
// --------------------------------------------------
.posts-expand {
  &.index {
    .post-header {
      text-align: left;
	  margin-bottom: 20px;

      +mobile() {
        text-align: center;
      }
    }

    .post-meta-container {
      margin-top: 5px;
    }

    .post-meta {
      justify-content: flex-start;

      +mobile() {
        justify-content: center;
      }
    }
  }

  .post-title {
    font-size: 1.75em;
  }

  .post-meta-container {
    .post-description {
      font-size: 1em;
      text-align: left;
	  margin-top: 10px;
      margin-bottom: 80px;
    }
  }

  .post-eof {
    display: none;
  }

  .post-block:not(:first-of-type) {
    margin-top: 160px;
  }

  .post-tags {
    text-align: center;

    a {
      background: var(--content-bg-color);
      border-bottom: 0;
      padding: 1px 5px;

      &:hover {
        background: var(--menu-item-bg-color);
      }
    }
  }

  .post-nav {
    margin-top: 40px;
  }
}

.post-button {
  margin-top: 20px;
  text-align: right;

  .btn {
    background: none;
    border: 0;
    border-bottom: 3px solid var(--menu-item-bg-color);
	color: #8b8b8b;
    padding: 0;
    transition-property: border;

    &:hover {
      border-bottom-color: var(--btn-default-hover-border-color);
	  color: var(--btn-default-hover-border-color);
    }
  }
}


